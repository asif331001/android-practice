<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6EDFF"
    tools:context=".MainActivity">

<TableRow
    android:id="@+id/titleRowId"
    android:background="#00B0FF"
    android:gravity="center"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <TextView
        android:text="Student Details"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
</TableRow>

    <TableRow
        android:gravity="center"
    android:id="@+id/headerRowId"
    android:background="#63CFFF"

    >

        <TextView

            android:layout_width="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="ID"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        />


</TableRow>

   <TableRow
    android:id="@+id/details1RowId"
    android:background="#8EDCFF"

    >

        <TextView
            android:layout_width="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="182015029"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
        android:text="Asif Ahmed"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        />


</TableRow>

  <TableRow
    android:id="@+id/details2RowId"
    android:background="#8EDCFF"

    >

        <TextView
            android:layout_width="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="182015020"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
        android:text="Shamim Hossain"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        />


</TableRow>

 <TableRow
     android:layout_marginTop="10dp"
    android:id="@+id/buttonRowId"


    >

        <Button
            android:layout_column="0"
            android:text="Submit"
            android:textSize="16sp"
            />

     <Button
         android:layout_column="0"
         android:text="Cleart"
         android:textSize="16sp"
         />


</TableRow>


</TableLayout>